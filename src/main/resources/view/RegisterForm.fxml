         <font>
            <Font size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label fx:id="lblNICStatus" layoutX="22.0" layoutY="183.0" style="-fx-padding: 3 0 0 0;" text="Please enter valid NIC Number to proceed">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
   </children>
