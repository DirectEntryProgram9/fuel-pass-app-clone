      <FlowPane alignment="CENTER" hgap="5.0" layoutY="65.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label text="Already have an account?">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label onMouseClicked="#lblLogin_OnMouseClicked" style="-fx-text-fill: blue;" text="Login Here">
               <font>
                  <Font size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
         </children>
      </FlowPane>
      <Label layoutX="22.0" layoutY="100.0" text="Personal Details">
         <font>
            <Font size="16.0" />
         </font>
