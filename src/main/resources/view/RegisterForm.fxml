         </children>
      </TextFlow>
      <TextField fx:id="txtAddress" disable="true" layoutX="22.0" layoutY="296.0" prefHeight="26.0" prefWidth="640.0" promptText="Ex: 398/8, Colombo, Sri Lanka." AnchorPane.leftAnchor="22.0" AnchorPane.rightAnchor="22.0" />
